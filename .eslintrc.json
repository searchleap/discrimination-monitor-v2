{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "prefer-const": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off"
  },
  "overrides": [
    {
      "files": ["src/app/api/**/*.ts", "src/lib/*.ts"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["src/components/**/*.tsx"],
      "rules": {
        "no-console": "warn"
      }
    }
  ]
}